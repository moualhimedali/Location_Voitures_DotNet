@model IEnumerable<App.ApplicationCore.Domain.Voiture>

@{
    //ViewData["Title"] = "Index";
    ViewData["Title"] = "Voiture";
}

@*<h1>Index</h1>*@
<p>
    <a class="btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
</p>
<h1>Voiture</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer Une Nouvelle Voiture</a>
</p>
<p>
    @using (Html.BeginForm("Index", "Voiture", FormMethod.Get))
    {
        <b>Recherche Par NombrePlace </b>
        @*@Html.RadioButton("Recherche Selon","Nom",true) <text>Nom</text>
    @Html.RadioButton("Recherche Selon","Prenom") <text>Prenom</text>*@ <br />
        @Html.TextBox("Recherche", "", htmlAttributes: new { @class="w-50 from-control"})
        <input type="submit" value="Recherche" class="btn btn-success" />
    }
</p>
<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Couleur)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="8" class="text-danger fw-bold"> Cette Reservation N'existe pas</td>
            </tr>
        }
        else
        {
        foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Couleur)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matricule" class="btn btn-success">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Matricule" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Matricule" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
}
}
    </tbody>
</table>
<div class="card-footer">
    <div class="d-flex">
        <h4>Total Des Voitures : @ViewBag.TotalVoiture</h4>
    </div>
</div>
