@model App.ApplicationCore.Domain.Voiture

@{
    //ViewData["Title"] = "Create";
    ViewData["Title"] = "Voiture";

}

<h1>Créer Une Voiture</h1>

@*<h4>Voiture</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricule" class="control-label"></label>
                <input asp-for="Matricule" class="form-control" />
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marque" class="control-label"></label>
                <select asp-for="Marque" class="form-control" asp-items="Html.GetEnumSelectList<App.ApplicationCore.Domain.Marque>()"></select>
                @*<input asp-for="Marque" class="form-control" />
                <span asp-validation-for="Marque" class="text-danger"></span>*@
            </div>
            @*<div class="form-group">
                <label asp-for="Modele" class="control-label"></label>
                <input asp-for="Modele" class="form-control" />
                <span asp-validation-for="Modele" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="NombrePlace" class="control-label"></label>
                <input asp-for="NombrePlace" class="form-control" />
                <span asp-validation-for="NombrePlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Couleur" class="control-label"></label>
                <select asp-for="Couleur" class="form-control" asp-items="Html.GetEnumSelectList<App.ApplicationCore.Domain.CouleurVoiture>()"></select>
                @*<span asp-validation-for="Couleur" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
