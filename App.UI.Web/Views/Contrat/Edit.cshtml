@model App.ApplicationCore.Domain.Contrat

@{
    //ViewData["Title"] = "Edit";
    ViewData["Title"] = "Contrat";
}

<h1>Modifier</h1>

<h4>Contrat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NumeroContrat" />
            <div class="form-group">
                <label asp-for="DateDebutContrat" class="control-label"></label>
                <input asp-for="DateDebutContrat" class="form-control" />
                <span asp-validation-for="DateDebutContrat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinContrat" class="control-label"></label>
                <input asp-for="DateFinContrat" class="form-control" />
                <span asp-validation-for="DateFinContrat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreJoursLocation" class="control-label"></label>
                <input asp-for="NombreJoursLocation" class="form-control" />
                <span asp-validation-for="NombreJoursLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationId" class="control-label"></label>
                <select asp-for="ReservationId" class="form-control" asp-items="ViewBag.ReservationId"></select>
                <span asp-validation-for="ReservationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoitureId" class="control-label"></label>
                <select asp-for="VoitureId" class="form-control" asp-items="ViewBag.VoitureId"></select>
                <span asp-validation-for="VoitureId" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="ChauffeurId" class="control-label"></label>
                <select asp-for="ChauffeurId" class="form-control" asp-items="ViewBag.ChauffeurId"></select>
                <span asp-validation-for="ChauffeurId" class="text-danger"></span>
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
