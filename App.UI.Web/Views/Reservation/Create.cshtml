@model App.ApplicationCore.Domain.Reservation

@{
    //ViewData["Title"] = "Create";
    ViewData["Title"] = "Reservation";
}

<h1>Créer Une Reservation</h1>

@*<h4>Reservation</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateDebutLocation" class="control-label"></label>
                <input asp-for="DateDebutLocation" class="form-control" />
                <span asp-validation-for="DateDebutLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinLocation" class="control-label"></label>
                <input asp-for="DateFinLocation" class="form-control" />
                <span asp-validation-for="DateFinLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReservation" class="control-label"></label>
                <input asp-for="DateReservation" class="form-control" />
                <span asp-validation-for="DateReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixLocationParJour" class="control-label"></label>
                <input asp-for="PrixLocationParJour" class="form-control" />
                <span asp-validation-for="PrixLocationParJour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarqueVoiture" class="control-label"></label>
                @*<select asp-for="MarqueVoiture" class="form-control"></select>*@
                <select asp-for="MarqueVoiture" class="form-control" asp-items="Html.GetEnumSelectList<App.ApplicationCore.Domain.MarqueVoiture>()"></select>
                <span asp-validation-for="MarqueVoiture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EtatReservation" class="control-label"></label>
                @*<select asp-for="Etat" class="form-control"></select>*@
                <select asp-for="EtatReservation" class="form-control" asp-items="Html.GetEnumSelectList<App.ApplicationCore.Domain.EtatReservation>()"></select>
                <span asp-validation-for="EtatReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Retour à la liste</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
